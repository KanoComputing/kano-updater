#
# recovery-success-splash.service
#
# Runs the splash screen for the recovery mechanism is successful
#


[Unit]
Description=Update recovery successfully finished splash
DefaultDependencies=no
ConditionPathExists=/usr/lib/python2.7/dist-packages/kano_updater/ui/media/images/en_US/update-interrupted/recovery-success

[Service]
Restart=no
ExecStart=/usr/bin/kano-start-splash -t -1 /usr/lib/python2.7/dist-packages/kano_updater/ui/media/images/en_US/update-interrupted/recovery-success
