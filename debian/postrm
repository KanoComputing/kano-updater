LXDE_AUTOSTART_PATH="/etc/xdg/lxsession/LXDE/autostart"
UPDATER_CMD="kano-updater ui boot-window"

case "$1" in
    remove|upgrade)
        # Remove config file
        rm /etc/sudoers.d/kano-updater_conf

        #Â Remove the kano-updater boot window from LXDE autostart
        if grep "$UPDATER_CMD" "$LXDE_AUTOSTART_PATH"; then
            sed -i "/$UPDATER_CMD/d" $LXDE_AUTOSTART_PATH
        fi

        ;;
esac

#DEBHELPER#

exit 0
